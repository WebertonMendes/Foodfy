{% extends "../layout.njk" %}

{% block title %}
  <title>Foodfy - {{ recipe.title }}</title>
{% endblock %}

{% block css %}
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&display=swap">
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/site-recipes.css">
  <link rel="stylesheet" href="/styles/image-gallery.css">
{% endblock %}

{% block content %}
  <section class="gallery">
    <div class="highlight">
      <img src="{{ recipe.recipe_images[0] }}" alt="recipe.title">
    </div>

    <div class="tumbmail">
      {% for image in recipe.recipe_images %}
        <img
          src="{{ image }}"
          alt="recipe.title"
          {% if loop.index0 == 0 %}
          class="active"
          {% endif %}
          onclick="ImageGallery.setImage(event)"
        >
      {% endfor %}
    </div>
  </section>
    
  <main>
    <div class="recipe-name">
      <h1>{{ recipe.title }}</h1>
      <p>por {{ recipe.chef_name }}</p>
    </div>

    <div class="details">
      <h3>Ingredientes</h3>
      <div class="details-button">
        <p id="button-ingredients" onclick="showHideIngredients()">Esconder</p>
      </div>
    </div>

    <section class="recipe-ingredients">
      <ul class="site-ul">
        {% for recipeIngredients in recipe.ingredients %}
          <li>{{ recipeIngredients }}</li>
        {% endfor %}
      </ul>
    </section>
    
    <div class="details">
      <h3>Modo de preparo</h3>
      <div class="details-button">
        <p id="button-preparation" onclick="showHidePreparation()">Exibir</p>
      </div>
    </div>

    <section class="recipe-preparation">
      <ul class="site-ul">
      {% for recipePreparation in recipe.preparation %}
        <li>{{ recipePreparation }}</li>
      {% endfor %}
      </ul>
    </section>

    <div class="details">  
      <h3>Informações adicionais</h3>
      <div class="details-button">
        <p id="button-information" onclick="showHideInformation()">Exibir</p>
      </div>
    </div>

    <section class="recipe-information">
      <p>{{ recipe.information }}</p>
    </section>
  </main>
{% endblock %}}