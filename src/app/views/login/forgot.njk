{% extends "./layout.njk" %}

{% block content %}
  <h1>Esqueceu a senha?</h1>

  <form action="/login/forgot" method="POST">
    <div class="item">
      <label for="email">Email</label>
      <input type="email" name="email" id="email" placeholder="Digite seu email para recuperar sua senha">
    </div>

    <div class="actions">
        <span></span>
        <button type="submit">Recuperar</button>
    </div>
  </form>
{% endblock %}

{% block scripts %}
  {% if errorLogin %}
    <script>
      document.querySelector('#email').classList.add('inputError')
    </script>
  {% endif %}
{% endblock %}