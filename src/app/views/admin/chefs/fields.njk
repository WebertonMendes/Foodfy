<div class="item">
    <label for="name">Nome</label>
    <input
        type="text"
        name="name"
        value="{{ chef.name }}"
    />
</div>

<div class="item">
    <label for="avatar">Avatar</label>
    
    {% if chef.path %}
        <input type="text" value="{{ chef.path }}" disabled>
    {% endif %}

    <div id="avatar-upload">
        <input
            id="avatar-input"
            type="file"
            name="avatar"
            accept = "imagem/*"
        />
        <p>Enviar Avatar</p>
    </div>
</div>